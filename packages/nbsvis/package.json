{
  "name": "@nbsvis/core",
  "version": "0.3.0",
  "description": "NBS visualization tool",
  "type": "module",
  "files": [
    "dist",
    "assets"
  ],
  "main": "./dist/nbsvis.umd.js",
  "module": "./dist/nbsvis.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/nbsvis.js",
      "require": "./dist/nbsvis.umd.js"
    }
  },
  "scripts": {
    "dev": "vite build --watch --mode development --emptyOutDir=false",
    "build": "tsc && vite build --mode production",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "fix": "pnpm run format && pnpm run lint:fix",
    "test": "jest"
  },
  "dependencies": {
    "@encode42/nbs.js": "^5.0.2",
    "@nbsjs/core": "^6.0.0",
    "avl": "^1.6.0",
    "jszip": "^3.10.1",
    "mitt": "^3.0.1",
    "pixi.js": "^8.8.1"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@laynezh/vite-plugin-lib-assets": "^1.1.0",
    "@types/audioworklet": "^0.0.93",
    "@types/jest": "^29.5.14",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "pathe": "^2.0.3",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "5.8.2",
    "vite": "^6.3.0",
    "vite-plugin-dts": "^4.5.3"
  }
}